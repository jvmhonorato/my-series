<%- include('../partials/header')%>

   

    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <form method="post">
                <h2>Nova Series</h2>
                
                <div class="form-group">
                    <label for="name">Nome da serie</label>
                    <input name="name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="namelHelp" placeholder="Informe o nome da serie">
                    <small id="nameHelp" class="form-text text-muted">Nome da serie a ser salva.</small>
                  </div>
                  <div class="form-group">
                    <label for="status">Status</label>
                    <select class="form-control" id="status" name="status">
                      <option value="to-watch">Para assistir</option>
                      <option value="watching">Assistindo</option>
                      <option value="watched">Assitido</option>
                    
                    </select>
                  </div>
                <button class="btn btn-primary">Salvar</button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <%- include('../partials/footer')%>